# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/code_guardian"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# GitHub App Configuration
GITHUB_APP_ID=your_github_app_id
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour_private_key_here\n-----END RSA PRIVATE KEY-----"

# AI Configuration - Optimized for 10K tokens/minute limit
GOOGLE_API_KEY=your_google_ai_api_key

# Chunk Size Settings (Conservative for 10K/minute limit)
AI_MAX_DIFF_LINES=300              # Max lines before chunking (reduced from 500)
AI_MAX_DIFF_SIZE=20000             # Max chars before chunking (reduced from 30000)
AI_MAX_FILE_CHUNK_LINES=150        # Max lines per file chunk (reduced from 200)
AI_MAX_FILE_CHUNK_SIZE=8000        # Max chars per file chunk (reduced from 10000)
AI_MAX_SUB_CHUNK_LINES=80          # Max lines per sub-chunk (reduced from 100)
AI_MAX_OUTPUT_TOKENS=1500          # Max output tokens (reduced from 2048)
AI_PARALLEL_BATCH_SIZE=2           # Parallel chunks (reduced from 3)

# Chunk Merging (Enabled by default)
AI_CHUNK_MERGE_ENABLED=true
AI_OPTIMAL_CHUNK_SIZE=120          # Target chunk size (reduced from 200)
AI_MAX_CHUNK_SIZE=200              # Max chunk size (reduced from 350)
AI_MIN_CHUNK_SIZE=40               # Min chunk size before merging

# File Filtering
AI_EXCLUDED_FILES=package-lock.json,yarn.lock,pnpm-lock.yaml,dist/,build/,node_modules/,.git/,.DS_Store,Thumbs.db,.vscode/,.idea/

# Rate Limiting (Optional - set AI_RATE_LIMIT_ENABLED=true to enable)
AI_RATE_LIMIT_ENABLED=false
AI_RATE_LIMIT_TPM=8000             # 80% of 10K limit for safety
AI_RATE_LIMIT_RPM=30               # Conservative request limit

# Alternative AI Provider (Optional)
OPENAI_API_KEY=your_openai_api_key
